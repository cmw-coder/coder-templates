#!/bin/bash
if [ $# -ne 2 ]; then
    echo "- ‚ùî Usage: install-extension <code-server-path> <extension-url>"
    exit 1
fi

CODER_SERVER_PATH="$1"
EXTENSION_URL="$2"
EXTENSION_NAME=$(basename "$EXTENSION_URL")

# È¢úËâ≤ÊîØÊåÅÊ£ÄÊµã
if [ -n "$CODER" ] || [ -t 1 ]; then
    COLOR_GREEN=$(echo -e "\033[32m")
    COLOR_CYAN=$(echo -e "\033[36m")
    COLOR_RED=$(echo -e "\033[31m")
    COLOR_RESET=$(echo -e "\033[0m")
else
    COLOR_GREEN="" && COLOR_CYAN="" && COLOR_RED="" && COLOR_RESET=""
fi

temp_file=$(mktemp --suffix=.vsix) || exit 1

echo -e "${COLOR_CYAN}- üíæ Downloading extension '${EXTENSION_NAME}'${COLOR_RESET}"
if curl -fsSL -o "$temp_file" "$EXTENSION_URL"; then
    echo -e "${COLOR_CYAN}- ‚öôÔ∏è Installing extension '${EXTENSION_NAME}'${COLOR_RESET}"
    "$CODER_SERVER_PATH" --install-extension "$temp_file"
    echo -e "${COLOR_GREEN}- ‚úÖ Extension '${EXTENSION_NAME}' installed${COLOR_RESET}"
    rm "$temp_file"
else
    echo -e "${COLOR_RED}- ‚ùå Download extension '${EXTENSION_NAME}' failed${COLOR_RESET}"
    rm -f "$temp_file"
    exit 1
fi
